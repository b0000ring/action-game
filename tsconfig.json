{
  "compilerOptions": {
    "outDir": "./dist/",
    "noImplicitAny": true,
    "module": "es6",
    "sourceMap": true,
    "target": "es5",
    "moduleResolution": "node",
    "strictNullChecks": true,
    "resolveJsonModule": true,
    "esModuleInterop": true,
    "baseUrl": "./",
    "paths": {
      "@common/*": [
        "src/common/*"
      ],
      "@engine/*": [
        "src/engine/*"
      ],
      "@game/*": [
        "src/game/*"
      ],
      "@app/*": [
        "src/app/*"
      ]
    }
  },
  "include": ["**/*.ts"]
}